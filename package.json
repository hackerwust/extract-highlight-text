{
  "name": "extract-highlight-text",
  "version": "2.0.1",
  "description": "高性能多文本关键字匹配模块，用于前端文本高亮",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "test": "ava",
    "build:watch": "npm run clean && npm run build:esm -- --watch",
    "build": "run-s clean && run-p build:cjs build:esm",
    "build:cjs": "tsc --outDir lib --module commonjs --declaration",
    "build:esm": "tsc --outDir esm --module esnext --declaration",
    "babel_build:cjs": "tsc --emitDeclarationOnly --outDir lib && BUILD_TARGET=cjs babel src --out-dir lib --extensions \".ts,.tsx\"",
    "babel_build:esm": "tsc --emitDeclarationOnly --outDir esm && BUILD_TARGET=esm babel src --out-dir esm --extensions \".ts,.tsx\"",
    "clean": "rm -rf lib esm build temp dist .cache",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "esm/",
    "lib/"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "build",
      "test",
      "log"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hackerwust/extract-highlight-text.git"
  },
  "keywords": [
    "highlight",
    "hightight text",
    "multi text highlight",
    "big text highlight"
  ],
  "author": "xiaochan(1427182960@qq.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hackerwust/extract-highlight-text/issues"
  },
  "homepage": "https://github.com/hackerwust/extract-highlight-text#readme",
  "dependencies": {
    "core-js": "^3.1.4",
    "tslib": "^1.9.3",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "ava": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-ttdefault": "^1.0.7",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.3.0"
  }
}
